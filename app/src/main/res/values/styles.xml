<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueQuizlet</item>
        <item name="colorPrimaryDark">@color/turquise</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="ActionItem">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>


    <style name="Theme.App.Dialog.FullScreen"
        parent="Theme.MaterialComponents.Dialog">
        <!-- (1)-->
        <item name="android:windowIsFloating">true</item>
        <!-- (2) -->
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
