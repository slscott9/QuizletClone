<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="56dp">

    <TextView
        android:id="@+id/tvCreateSet"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        style="@style/ActionItem"
        android:text="@string/create_study_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_baseline_add_set"/>

    <TextView
        android:id="@+id/tvCreateFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:drawableStartCompat="@drawable/ic_baseline_folder_24"
        style="@style/ActionItem"
        android:text="@string/create_folder"
        app:layout_constraintStart_toStartOf="@+id/tvCreateClass"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateClass" />

    <TextView
        android:id="@+id/tvCreateClass"
        app:drawableStartCompat="@drawable/ic_baseline_people_24"
        style="@style/ActionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/create_class"
        app:layout_constraintStart_toStartOf="@+id/tvCreateSet"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateSet" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>